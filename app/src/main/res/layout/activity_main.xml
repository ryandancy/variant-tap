<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.keal.varianttap.MainActivity">
  
  <TextView
      android:id="@+id/main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/main_menu_title_margin_top"
      android:text="@string/app_name_lowercase"
      android:textAlignment="center"
      android:textColor="@color/colorPrimaryDark"
      tools:ignore="SpUsage" />
  
  <FrameLayout
      android:id="@+id/throwing_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  
  <LinearLayout
      android:id="@+id/circle_buttons"
      style="?android:attr/buttonBarStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/circle_button_diameter"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/circle_button_margin_bottom"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      tools:ignore="RtlHardcoded">
    
    <ImageButton
        android:id="@+id/toggle_sound_btn"
        android:layout_width="@dimen/circle_button_diameter"
        android:layout_height="@dimen/circle_button_diameter"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        android:onClick="toggleSound"
        android:padding="@dimen/circle_button_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/music_note"
        tools:ignore="ContentDescription" />
    
    <ImageButton
        android:layout_width="@dimen/circle_button_diameter"
        android:layout_height="@dimen/circle_button_diameter"
        android:layout_marginLeft="@dimen/circle_button_spacing"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        android:contentDescription="@string/about_desc"
        android:onClick="toAbout"
        android:padding="@dimen/circle_button_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/information" />
    
    <ImageButton
        android:layout_width="@dimen/circle_button_diameter"
        android:layout_height="@dimen/circle_button_diameter"
        android:layout_marginLeft="@dimen/circle_button_spacing"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        android:contentDescription="@string/leaderboard_desc"
        android:padding="@dimen/circle_button_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/leaderboard" />
    
    <ImageButton
        android:layout_width="@dimen/circle_button_diameter"
        android:layout_height="@dimen/circle_button_diameter"
        android:layout_marginLeft="@dimen/circle_button_spacing"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_slashed"
        android:contentDescription="@string/remove_ads_desc"
        android:padding="@dimen/circle_button_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/ad" />
    
  </LinearLayout>
  
  <fragment
      android:id="@+id/main_menu_difficulty_buttons_fragment"
      android:name="ca.keal.varianttap.DifficultyButtonsFragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/circle_buttons"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/circle_button_margin_top"
      app:show_text="@string/play"
      app:transition_direction="right" />
  
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.keal.varianttap.ui.MainActivity">
  
  <TextView
      android:id="@+id/main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/main_menu_title_margin_top"
      android:text="@string/app_name_lowercase"
      android:textAlignment="center"
      android:textColor="@color/colorPrimaryDark"
      tools:ignore="SpUsage" />
  
  <FrameLayout
      android:id="@+id/throwing_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />
  
  <LinearLayout
      android:id="@+id/circle_buttons"
      style="?android:attr/buttonBarStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/circle_button_diameter"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/circle_button_margin_bottom"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      tools:ignore="RtlHardcoded">
    
    <ca.keal.varianttap.ui.circlebutton.SoundToggleCircleButton
        style="@style/CircleButton.ToggleSound" />
    
    <ca.keal.varianttap.ui.circlebutton.AboutCircleButton
        style="@style/CircleButton.About"
        android:layout_marginLeft="@dimen/circle_button_spacing" />
    
    <ca.keal.varianttap.ui.circlebutton.LeaderboardCircleButton
        style="@style/CircleButton.Leaderboard"
        android:layout_marginLeft="@dimen/circle_button_spacing" />
    
    <ca.keal.varianttap.ui.circlebutton.RemoveAdsCircleButton
        style="@style/CircleButton.RemoveAds"
        android:layout_marginLeft="@dimen/circle_button_spacing" />
    
  </LinearLayout>
  
  <fragment
      android:id="@+id/main_menu_difficulty_buttons_fragment"
      android:name="ca.keal.varianttap.ui.DifficultyButtonsFragment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/circle_buttons"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/circle_button_margin_top"
      app:show_text="@string/play" />
  
</RelativeLayout>
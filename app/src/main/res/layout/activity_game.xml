<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.keal.varianttap.GameActivity">
  
  <com.eralp.circleprogressview.CircleProgressView
      android:id="@+id/countdown_circle"
      android:layout_width="@dimen/countdown_circle_diameter"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_margin="20dp"
      app:cpv_circle_color="@color/colorPrimary"
      app:cpv_circle_width="@dimen/countdown_circle_width"
      app:cpv_background_circle_width="@dimen/countdown_circle_width" />
  
  <android.support.v7.widget.GridLayout
      android:id="@+id/imgs_grid"
      android:layout_centerInParent="true"
      android:padding="40dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  
</RelativeLayout>
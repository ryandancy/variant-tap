<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="DifficultyButtonsFragment">
    <!-- Note: for some reason using showText causes an error, that's why it's show_text -->
    <attr name="show_text" format="string" />
    <attr name="hide_text" format="string" />
    <attr name="transition_direction" format="enum">
      <enum name="left" value="0" />
      <enum name="right" value="1" />
    </attr>
  </declare-styleable>
  
  <attr name="circleButtonStyle" type="reference" />
  <attr name="toggleSoundCircleButtonStyle" type="reference" />
  <attr name="aboutCircleButtonStyle" type="reference" />
  <attr name="leaderboardCircleButtonStyle" type="reference" />
  <attr name="removeAdsCircleButtonStyle" type="reference" />
</resources>
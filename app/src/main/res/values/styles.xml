<resources>
  
  <!-- Base application theme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  
  <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_marginLeft">@dimen/button_margin_sides</item>
    <item name="android:layout_marginRight">@dimen/button_margin_sides</item>
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="android:textColor">@color/textLight</item>
    <item name="android:textSize">20sp</item>
  </style>
  
</resources>

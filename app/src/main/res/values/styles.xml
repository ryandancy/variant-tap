<resources>
  
  <!-- Base application theme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorBackground</item>
  </style>
  
  <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_marginLeft">@dimen/button_margin_sides</item>
    <item name="android:layout_marginRight">@dimen/button_margin_sides</item>
    <item name="android:background">@drawable/button</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/textLight</item>
    <item name="android:textSize">20sp</item>
  </style>
  
  <style name="AboutText" parent="TextAppearance.AppCompat">
    <item name="android:textAlignment">center</item>
  </style>
  
  <style name="AboutText.Header">
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">25sp</item>
  </style>
  
  <style name="AboutText.Body">
    <item name="android:layout_marginBottom">@dimen/post_game_stats_line_spacing</item>
    <item name="android:textColor">@color/textDark</item>
    <item name="android:textSize">14sp</item>
  </style>
  
  <style name="AboutText.Body.Key">
    <item name="android:layout_marginBottom">0dp</item>
    <item name="android:layout_marginEnd">@dimen/post_game_stats_space_width</item>
    <item name="android:textColor">@color/colorAccent</item>
  </style>
  
  <style name="AboutText.Body.Value">
    <item name="android:layout_marginBottom">0dp</item>
  </style>
  
  <style name="AboutTextKeyValueLayout">
    <item name="android:layout_marginBottom">@dimen/post_game_stats_line_spacing</item>
    <item name="android:orientation">horizontal</item>
  </style>

</resources>

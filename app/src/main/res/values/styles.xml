<resources>
  
  <!-- Base application theme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorBackground</item>
    <item name="circleButtonStyle">@style/CircleButton</item>
    <item name="toggleSoundCircleButtonStyle">@style/CircleButton.ToggleSound</item>
    <item name="aboutCircleButtonStyle">@style/CircleButton.About</item>
    <item name="leaderboardCircleButtonStyle">@style/CircleButton.Leaderboard</item>
    <item name="achievementsCircleButtonStyle">@style/CircleButton.Achievements</item>
    <item name="removeAdsCircleButtonStyle">@style/CircleButton.RemoveAds</item>
  </style>
  
  <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_marginLeft">@dimen/button_margin_sides</item>
    <item name="android:layout_marginRight">@dimen/button_margin_sides</item>
    <item name="android:background">@drawable/button</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/textLight</item>
    <item name="android:textSize">20sp</item>
  </style>
  
  <style name="CircleButton" parent="Base.Widget.AppCompat.ImageButton">
    <item name="android:layout_width">@dimen/circle_button_diameter</item>
    <item name="android:layout_height">@dimen/circle_button_diameter</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:background">@drawable/circle</item>
    <item name="android:padding">@dimen/circle_button_padding</item>
    <item name="android:scaleType">fitCenter</item>
  </style>
  
  <style name="CircleButton.ToggleSound">
    <!-- contentDescription set in code -->
    <item name="android:src">@drawable/music_note</item>
  </style>
  
  <style name="CircleButton.About">
    <item name="android:contentDescription">@string/about_desc</item>
    <item name="android:src">@drawable/information</item>
  </style>
  
  <style name="CircleButton.Leaderboard">
    <item name="android:contentDescription">@string/leaderboard_desc</item>
    <item name="android:padding">@dimen/circle_button_small_padding</item>
    <item name="android:src">@drawable/leaderboard</item>
  </style>
  
  <style name="CircleButton.Achievements">
    <item name="android:contentDescription">@string/achievements_desc</item>
    <item name="android:padding">@dimen/circle_button_small_padding</item>
    <item name="android:src">@drawable/achievement</item>
  </style>
  
  <style name="CircleButton.RemoveAds">
    <item name="android:background">@drawable/circle_slashed</item>
    <item name="android:contentDescription">@string/remove_ads_desc</item>
    <item name="android:src">@drawable/ad</item>
  </style>
  
  <style name="CircleButtonBar" parent="Base.Widget.AppCompat.ButtonBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/circle_button_diameter</item>
    <item name="android:divider">@drawable/circle_button_bar_divider</item>
    <item name="android:showDividers">middle</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">horizontal</item>
  </style>
  
  <style name="AboutText" parent="TextAppearance.AppCompat">
    <item name="android:textAlignment">center</item>
  </style>
  
  <style name="AboutText.Header">
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">@dimen/text_header_size</item>
  </style>
  
  <style name="AboutText.Body">
    <item name="android:layout_marginBottom">@dimen/text_line_spacing</item>
    <item name="android:textColor">@color/textDark</item>
    <item name="android:textSize">@dimen/text_body_size</item>
  </style>
  
  <style name="AboutText.Body.Key">
    <item name="android:layout_marginBottom">0dp</item>
    <item name="android:layout_marginEnd">@dimen/text_space_width</item>
    <item name="android:textColor">@color/colorAccent</item>
  </style>
  
  <style name="AboutText.Body.Value">
    <item name="android:layout_marginBottom">0dp</item>
  </style>
  
  <style name="AboutTextKeyValueLayout">
    <item name="android:layout_marginBottom">@dimen/text_line_spacing</item>
    <item name="android:orientation">horizontal</item>
  </style>
  
  <style name="DialogText" parent="TextAppearance.AppCompat">
    <item name="android:textAlignment">center</item>
  </style>
  
  <style name="DialogText.Header">
    <item name="android:layout_marginTop">7dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">@dimen/text_header_size</item>
  </style>
  
  <style name="DialogText.Body">
    <item name="android:layout_marginBottom">@dimen/text_line_spacing</item>
    <item name="android:textColor">@color/textDark</item>
    <item name="android:textSize">@dimen/text_body_size</item>
  </style>

</resources>

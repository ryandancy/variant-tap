<?xml version="1.0" encoding="utf-8"?>
<!-- Note: dimensions are for a 1440x2560/640dpi screen because that's my testing phone (LG G4) -->
<resources>
  <!-- TODO extract most (all?) dimensions -->
  
  <dimen name="thrown_image_size">50dp</dimen>
  
  <!-- These define range of vertical biases thrown images can have without overlapping anything -->
  <item name="min_thrown_image_vertical_bias" type="dimen" format="float">0.3</item>
  <item name="max_thrown_image_vertical_bias" type="dimen" format="float">0.85</item>
  <item name="min_start_min_thrown_image_bias_diff" type="dimen" format="float">0.2</item>
  
  <!-- These define the range of horizontal biases the horizontal bias at the vertex can be -->
  <item name="min_thrown_image_horizontal_bias" type="dimen" format="float">0.6</item>
  <item name="max_thrown_image_horizontal_bias" type="dimen" format="float">1.2</item>
  
  <!-- These define the range of number of times the thrown images can rotate -->
  <item name="min_thrown_image_rotate_times" type="dimen" format="float">0.3</item>
  <item name="max_thrown_image_rotate_times" type="dimen" format="float">1.8</item>
  
  <dimen name="countdown_circle_width">10dp</dimen>
  <dimen name="countdown_circle_diameter">100dp</dimen>
  <dimen name="countdown_circle_margin">20dp</dimen>
  
  <dimen name="grid_padding">40dp</dimen>
  <dimen name="grid_spacing">10dp</dimen>
  
  <!-- TEXT SIZES -->
  
  <dimen name="button_text_size">20sp</dimen>
  
  <!-- Note: this should be exactly the correct size to fit in the screen width (and margins) -->
  <!-- This may need i18n for different values of @string/app_name_lowercase! -->
  <dimen name="main_menu_title_size">68dp</dimen>
  
  <dimen name="paused_text_size">80dp</dimen>
  <dimen name="unpause_countdown_text_size">300dp</dimen>
  
  <dimen name="post_game_stats_size">20sp</dimen>
